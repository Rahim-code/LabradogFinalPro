@model LabradogApp.ViewModels.HomeViewModel
@{
    ViewData["Title"] = "Team";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="ourT align-items-center d-flex justify-content-center">
    <h1 class="AU">Our Team</h1>
</div>


<div class="container">
    <h4 class="text-center the my-5">Our Team </h4>
    <div class="row">
        @foreach (var item in Model.Teams)
        {
            <div class="card border-0 col-lg-3 col-md-3 col-sm-12">
                <img style="width: 220px !important;" src="~/uploads/@item.Image" class="card-img-top rounded-circle mx-auto" alt="...">
                <div class="card-body">
                    <p class="RM text-center">@item.FullName,</p>
                    <p class="text-center">@item.Job</p>
                    <p class="text-muted text-center">
                        @item.Info
                    </p>
                    <div class="mx-auto d-flex justify-content-center">
                        <i class=" PBG text-center mx-3 fab fa-facebook-f RM p-2 F rounded-circle"></i>
                        <i class=" PBG text-center mx-3 fab fa-twitter RM p-2  rounded-circle"></i>
                        <i class=" PBG text-center mx-3 fab fa-instagram RM p-2 IM rounded-circle"></i>
                    </div>

                </div>
            </div>
        }
    </div>
    @*<div class="d-flex justify-content-center my-3">
        <p class="badge rounded-pill text-light px-5 py-4 BT ">Choose A Sitter</p>
    </div>*@


</div>


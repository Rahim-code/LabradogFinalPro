@model LabradogApp.ViewModels.HomeViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="carouselExampleIndicators" class="carousel slide w-100" data-bs-ride="carousel">
    <div class="carousel-indicators">
        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
    </div>
    <div class="carousel-inner w-100">
        <div class="carousel-item active w-100">
            <!-- <img src="~/Labradog/img/dog1.jpg" class="d-block w-100" alt="..."> -->
            <div class="photos d-flex justify-content-center align-items-start flex-column">
                <h1 class="container">
                    Professional
                    <span class="TC">Daily Care</span> And <br>
                    Meals For Your Dog
                </h1>
                <p class="container"> Here at LabraDog, we love Labrador Retrievers and we have been <br> breeding them for over half a century. We guarantee that puppies from <br> our kennel club will grow into your faithful companions.</p>

            </div>

        </div>
        <div class="photos2 carousel-item w-100">
            <!-- <img src="~/Labradog/img/dog2.jpg" class="d-block w-100" alt="..."> -->
            <div class="photos2 d-flex justify-content-center align-items-start flex-column">
                <h1 class="container">
                    Breeding The
                    <span class=" TC">Best Friends</span> <br>
                    For You And Your Family
                </h1>
                <p class="container"> Here at LabraDog, we love Labrador Retrievers and we have been <br> breeding them for over half a century. We guarantee that puppies from <br> our kennel club will grow into your faithful companions.</p>
            </div>

        </div>
        <div class="photos3 carousel-item w-100">
            <!-- <img src="~/Labradog/img/dog3.jpg" class="d-block w-100" alt="..."> -->
            <div class="photos3 d-flex justify-content-center align-items-start flex-column">
                <h1 class="container">
                    Flexible
                    <span class=" TC">Training</span>
                    For Your <br> Labrador Retriever
                </h1>
                <p class="container"> We will gladly train your labrador, regardless of their age and origin. <br> You can fully trust our experts and rely on our unique techniques that <br> work even for dogs with behavior problems.</p>

            </div>
        </div>

    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>
<div class="d-flex justify-content-end container w-100">
    <div style="height: 75px; width: 75px; margin-top: -20px; z-index:1;" class="rounded-circle EC"></div>
</div>
<div class="container text-center">
    <h1 class="WCA">We Care About <span class="OP">Our Pets</span> Since Their Birth</h1>
    <p class="text-muted">We provide high-quality dog care services and advice for a well-trained dog</p>
</div>
<div class="d-flex justify-content-center flex-wrap">
    @foreach (var item in Model.Services)
    {
        <div class="card mx-3 border-0" style="width: 20rem;">
            <img src="~/uploads/@item.Image" class="card-img-top" alt="...">
            <div class="card-body">
                <h4 style="font-size: 20px;" class="text-center HD">@item?.Title</h4>
                <p class="text-muted text-center">@item?.Main</p>

            </div>

        </div>
    }
</div>

<div class="AF w-100">
    <div class="d-flex justify-content-start container">
        <div style="height: 75px; width: 75px; margin-top: -15px; z-index:1;" class="rounded-circle EC"></div>
    </div>
    <div class="container py-5 d-flex justify-content-center flex-wrap">
        <div class="DDC py-5">
            <h2 class="FF">Daily <span class="D">Dog</span> Care</h2>
            @Html.Raw(Model.Setting.DogCare)
            <div class="d-flex">
                <div class="">
                    <i class="fas fa-sun SUN"></i> <p class="text-muted">
                        Daily <br>
                        Walking
                    </p>
                </div>

                <div class="mx-5 py-2">
                    <i class="fas fa-paw SUN"></i> <p class="text-muted py-3">
                        Regular <br>
                        Feeding
                    </p>
                </div>

                <div class="">
                    <i class="fas fa-bell SUN"></i><p class="text-muted">
                        Saving <br>
                        Your Time
                    </p>
                </div>

            </div>
        </div>
        <div style="width: 600px !important;" class="container d-flex justify-content-center align-items-center">

            <iframe width="100%" height="350" src="@Model.Setting.YoutubeLink" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>

        </div>
    </div>

</div>
<div class="d-flex justify-content-end container">
    <div style="height: 75px; width: 75px; margin-top: -30px; z-index:1;" class="rounded-circle EC"></div>
</div>



<div class="BF w-100">

    <div class="container py-5 d-flex justify-content-between flex-wrap">

        <div class=""><img class="w-100" src="~/Labradog/img/dog4.jpg" alt=""></div>
        <div class="DDC py-5">
            <h2 class="FF SML">Some Facts About The <span class="D">Labrador <br> Retriever</span> Breed</h2>
            @Html.Raw(Model.Setting.LabradorDesc)
